<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView
    android:id="@+id/title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:text="Tracker Player Demo"
    />
<Button
    android:id="@+id/embedded"
    android:text="Load embedded file"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    />
<Button
    android:id="@+id/choose"
    android:text="Choose file"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/embedded"
    />
<TextView
    android:id="@+id/info"
    android:text=""
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/choose" 
    />
<TextView
    android:id="@+id/playtime"
    android:text=""
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/info" 
    />
<SeekBar 
    android:id="@+id/songPosition"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/play_pause"
    android:layout_alignLeft="@+id/restart"
    android:layout_alignRight="@+id/forward"
    android:layout_marginBottom="10dp"
    android:visibility="invisible"
    />
<Button
    android:id="@+id/play_pause"
    android:text=">"
    android:textStyle="bold"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    />
<Button
    android:id="@+id/stop"
    android:text="#"
    android:textStyle="bold"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/play_pause"
    />
<Button
    android:id="@+id/forward"
    android:text=">>"
    android:textStyle="bold"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/stop"
    />
<Button
    android:id="@+id/rewind"
    android:text="{{"
    android:textStyle="bold"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/play_pause"
    />
<Button
    android:id="@+id/restart"
    android:text="{{{"
    android:textStyle="bold"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/rewind"
    />
</RelativeLayout>
